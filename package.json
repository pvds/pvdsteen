{
  "name": "pvdsteen",
  "version": "0.0.1",
  "description": "Personal website of Peter van der Steen",
  "author": "Peter van der Steen <pvdsteen@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pvds/pvdsteen"
  },
  "bugs": "https://github.com/pvds/moira/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "todo": "use html-minifier instead of html-minifier-cli and compile all html files",
    "clean": "rimraf app/dist && mkdirp app/dist/scripts",
    "lint": "eslint app/src/scripts",
    "sass": "node-sass --include-path node_modules/bourbon-neat/core/ -o app/dist/styles app/src/styles",
    "postcss": "postcss -u autoprefixer -b \"last 2 versions\" -u cssnano -r app/dist/styles/*.css",
    "babel": "babel app/src/scripts --out-file app/dist/scripts/app.js --presets=es2015,babili",
    "yamlmerge": "run-p yamlmerge:*",
    "yamlmerge:en": "merge-yaml -i app/src/data/global.yaml app/src/data/content-en.yaml -o app/src/data/en.merged.yaml",
    "yamlmerge:nl": "merge-yaml -i app/src/data/global.yaml app/src/data/content-nl.yaml -o app/src/data/nl.merged.yaml",
    "yamljson": "yaml2json app/src/data -p -s && mkdirp app/dist/data && mv app/src/data/*.json app/dist/data",
    "mustache": "npm run mustache:prepare && run-p mustache:*:*",
    "mustache:prepare": "npm run yamlmerge && (mkdirp app/templates/en & mkdirp app/templates/nl & npm run yamljson)",
    "mustache:en:index": "mustache app/dist/data/en.merged.json app/templates/index.mustache > app/templates/en/index.html",
    "mustache:en:404": "mustache app/dist/data/en.merged.json app/templates/404.mustache > app/templates/en/404.html",
    "mustache:nl:index": "mustache app/dist/data/nl.merged.json app/templates/index.mustache > app/templates/nl/index.html",
    "htmlminifier:en": "html-minifier --input-dir app/templates/en --output-dir app",
    "htmlminifier:nl": "html-minifier --input-dir app/templates/nl --output-dir app/nl",
    "static": "run-p static:*",
    "static:files": "copyfiles -f app/src/files/**/* app/dist/files",
    "static:fonts": "copyfiles -f app/src/fonts/**/* app/dist/fonts",
    "static:imagemin": "imagemin app/src/images/**/* -o app/dist/images",
    "static:icons": "svgo -f app/src/icons/* -o app/dist/images",
    "build": "npm run clean && run-p build:*",
    "build:html": "npm run mustache && (npm run htmlminifier:en & npm run htmlminifier:nl)",
    "build:css": "npm run sass -- --source-map true --output-style expanded && npm run postcss",
    "build:js": "npm run lint && npm run babel -- -s",
    "build:static": "npm run static",
    "deploy": "npm run clean && run-p deploy:*",
    "deploy:html": "npm run mustache && (npm run htmlminifier:en -- -c html-minifier.conf & npm run htmlminifier:nl -- -c html-minifier.conf)",
    "deploy:css": "npm run sass -- --output-style compressed && npm run postcss",
    "deploy:js": "npm run lint && npm run babel",
    "deploy:static": "npm run static",
    "start": "npm-run-all -p server start:*",
    "start:html": "onchange app/src/data/*.yaml app/templates/*.mustache -- npm run build:html",
    "start:css": "onchange app/src/styles -- npm run build:css",
    "start:js": "onchange app/src/scripts -- npm run build:js",
    "start:images": "onchange app/src/images -- npm run static:imagemin",
    "server": "browser-sync start --watchEvents [add, change] -p pvdsteen.dev --host pvdsteen.dev --open external --files [app/dist, app/templates/**/*.html]"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-cli": "^6.24.1",
    "babel-preset-babili": "^0.1.2",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.17.5",
    "copyfiles": "^1.0.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.16.1",
    "html-minifier": "^3.5.2",
    "imagemin-cli": "^3.0.0",
    "merge-yaml-cli": "^1.1.1",
    "mkdirp": "^0.5.1",
    "mustache": "^2.3.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.6.1",
    "standard": "^5.3.1",
    "svgo": "^0.7.1",
    "yamljs": "^0.2.10"
  },
  "dependencies": {
    "autotrack": "^2.4.1",
    "bourbon-neat": "^2.0.0",
    "font-awesome": "^4.7.0"
  }
}
