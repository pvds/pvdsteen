{
  "name": "pvdsteen",
  "version": "0.0.1",
  "description": "Personal website of Peter van der Steen",
  "author": "Peter van der Steen <pvdsteen@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pvds/pvdsteen"
  },
  "bugs": "https://github.com/pvds/moira/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "run-s lint:*",
    "lint:js": "eslint src/scripts --cache --fix ",
    "lint:css": "stylelint src/styles --cache --fix ",
    "lint:format": "prettier --write .",
    "sass": "node-sass --include-path node_modules/bourbon-neat/core/ -o dist/app/styles src/styles",
    "postcss": "postcss -u autoprefixer -b \"last 2 versions\" -u cssnano -r dist/app/styles/*.css",
    "prebabel": "mkdirp dist/app/scripts",
    "babel": "babel src/scripts --out-file dist/app/scripts/app.js --presets=es2015,babili",
    "yamlmerge": "mkdirp dist/tmp/data && run-p yamlmerge:*",
    "yamlmerge:en": "merge-yaml -i src/data/global.yaml src/data/content-en.yaml -o dist/tmp/data/en.merged.yaml",
    "yamlmerge:nl": "merge-yaml -i src/data/global.yaml src/data/content-nl.yaml -o dist/tmp/data/nl.merged.yaml",
    "yamljson": "yaml2json dist/tmp/data -p -s",
    "premustache": "mkdirp dist/app/nl && npm run yamlmerge && npm run yamljson",
    "mustache": "run-p mustache:*:*",
    "mustache:en:index": "mustache dist/tmp/data/en.merged.json src/templates/index.mustache > dist/app/index.html",
    "mustache:en:404": "mustache dist/tmp/data/en.merged.json src/templates/404.mustache > dist/app/404.html",
    "mustache:nl:index": "mustache dist/tmp/data/nl.merged.json src/templates/index.mustache > dist/app/nl/index.html",
    "htmlminifier": "html-minifier --input-dir dist/app --output-dir dist/app --file-ext html -c html-minifier.conf",
    "static": "run-p static:*",
    "static:files": "copyfiles -f src/files/**/* dist/app/files",
    "static:root": "copyfiles -f src/root/**/* dist/app",
    "static:fonts": "copyfiles -f src/fonts/**/* dist/app/fonts",
    "static:imagemin": "imagemin src/images/**/* -o dist/app/images",
    "static:icons": "svgo -r -f src/icons -o dist/app/images",
    "prebuild": "npm run clean",
    "build": "run-p build:*",
    "build:html": "npm run mustache",
    "build:css": "npm run sass -- --source-map true --output-style expanded && npm run postcss",
    "build:js": "npm run babel -- -s",
    "build:static": "npm run static",
    "predeploy": "npm run clean",
    "deploy": "run-p deploy:*",
    "deploy:html": "npm run mustache && npm run htmlminifier",
    "deploy:css": "npm run sass -- --output-style compressed && npm run postcss",
    "deploy:js": "npm run babel",
    "deploy:static": "npm run static",
    "start": "npm-run-all -p server start:*",
    "start:html": "onchange src/data/*.yaml src/templates/*.mustache -- npm run build:html",
    "start:css": "onchange src/styles -- npm run build:css",
    "start:js": "onchange src/scripts -- npm run build:js",
    "start:images": "onchange src/images -- npm run static:imagemin",
    "server": "browser-sync start --watchEvents [add, change] -p pvdsteen.dev --host pvdsteen.dev --open external --files [dist/app]"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.scss": "stylelint --fix",
    "*.{js,scss,md,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "autotrack": "^2.4.1",
    "autoprefixer": "^9.8.6",
    "babel-cli": "^6.24.1",
    "babel-preset-babili": "^0.1.2",
    "babel-preset-es2015": "^6.24.1",
    "bourbon-neat": "^4.0.0",
    "browser-sync": "^2.17.5",
    "copyfiles": "^2.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.8.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "font-awesome": "^4.7.0",
    "html-minifier": "^4.0.0",
    "husky": "^4.3.0",
    "imagemin-cli": "^6.0.0",
    "lint-staged": "^10.3.0",
    "merge-yaml-cli": "^1.1.1",
    "mkdirp": "^1.0.4",
    "mustache": "^4.0.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "standard": "^14.3.4",
    "stylelint": "^13.7.1",
    "stylelint-config-pragmatic": "^1.5.0",
    "svgo": "^1.3.2",
    "yamljs": "^0.3.0"
  }
}
